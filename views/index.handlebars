<div class="burgerhead">
  <img src="/assets/imgs/burger_logo.jpg" class="burgerlogo">
  <h1>Burgers!</h1>
  <h2>Burgers are tasty!</h2>
</div>

<div class="row">
  <div class="col-4 toeat">
    <ul>
      {{#each allBurgers}}
        {{#unless this.devoured}}
          <div>
            <button class='addButton btn btn-success' value={{id}}>{{burger_name}}</button>
            {{!-- <form class="change-devour">
              <input class="devoured" type="hidden" value={{id}}>
              <button type="submit" class="addbutton"> {{burger_name}}<button>
            </form> --}}
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-4">
    <ul>
      {{#each allBurgers}}
        {{#if devoured}}
          <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
          </div>
        {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="col-4">
    <h2>Add a Burger</h2>

    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="first burger">
      <button type="submit" class="addburger btn btn-primary">Add The Burger</button>
    </form>
  </div>
</div>